<%= form_for @meal, remote: true do |f| %>
  <div>
    <div class="form-group row">
      <%= f.label :time, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :time, class: "form-control", placeholder: "Time", autofocus: true %>
      </div>
    </div>
    <div class="form-group row col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg my-sm-3"%>
    </div>
  </div>
<% end %>
